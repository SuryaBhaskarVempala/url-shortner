<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg,#f06,#4a00e0);
            color: #fff;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
        }

        h1 {
            font-size: clamp(1.8rem, 5vw, 2.5rem);
            margin-top: clamp(80px, 15vh, 180px);
            margin-bottom: 20px;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            font-weight: 100;
            animation: fadeup 2s linear;
            text-align: center;
        }

        .inputdata {
            background: rgba(255, 255, 255, 0.1);
            margin-top: 10px;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            animation: leftRight 2s linear;
            width: min(90%, 600px);
        }

        .inputdata p {
            word-break: break-all;
            margin-bottom: 15px;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        @media (min-width: 768px) {
            form {
                flex-direction: row;
                align-items: flex-end;
                gap: 15px;
            }
        }

        .form-group {
            flex: 1;
        }

        label {
            font-size: 1.1rem;
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: none;
            outline: none;
            border-radius: 5px;
            margin: 5px 0;
        }

        button {
            padding: 10px 20px;
            font-size: 1rem;
            border: none;
            border-radius: 5px;
            background: #4a90e2;
            color: white;
            cursor: pointer;
            transition: background 0.3s ease;
            white-space: nowrap;
        }

        button:hover {
            background: #357ab8;
        }

        .tableContainer {
            background: rgba(255, 255, 255, 0.1);
            margin-top: 50px;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            animation: bottomUp 2s linear;
            width: min(90%, 1200px);
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            min-width: 600px;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
        }

        th {
            background-color: rgba(0, 0, 0, 0.2);
            white-space: nowrap;
        }

        td {
            word-break: break-all;
        }

        tr:nth-child(even) {
            background-color: rgba(255, 255, 255, 0.1);
        }

        @keyframes fadeup {
            0% { opacity: 0; }
            50% { opacity: 0.5; }
            100% { opacity: 1; }
        }

        @keyframes leftRight {
            0% {
                transform: translateX(20px);
                opacity: 0;
            }
            50% {
                transform: translateX(10px);
                opacity: 0.5;
            }
            100% {
                transform: translateX(0px);
                opacity: 1;
            }
        }

        @keyframes bottomUp {
            0% {
                transform: translateY(20px);
                opacity: 0;
            }
            50% {
                transform: translateY(10px);
                opacity: 0.5;
            }
            100% {
                transform: translateY(0px);
                opacity: 1;
            }
        }

        /* Additional responsive adjustments */
        @media (max-width: 480px) {
            body {
                padding: 10px;
            }

            h1 {
                margin-top: 60px;
            }

            .inputdata {
                padding: 15px;
            }

            label {
                font-size: 1rem;
            }

            th, td {
                padding: 8px 10px;
            }
        }
    </style>
</head>
<body>
    <h1>URL SHORTNER...</h1>

    <div class="inputdata">
        <% if(locals.id){%>
            <p>ShortId for this URL : http://localhost:4000/url/<%= locals.id %></p>
        <% } %>
        <% if(locals.adminMsg){%>
            <p><%= adminMsg %></p>
        <% } %>
        <form action="http://localhost:4000/url/" method="post">
            <div class="form-group">
                <label>Enter Your Original URL : </label>
                <input type="text" name="url" placeholder="https://example.com" required>
            </div>
            <button type="submit">Generate</button>
        </form>
    </div>

    <div class="tableContainer">
        <table>
            <thead>
                <tr>
                    <th>S.no</th>
                    <th>ShortID</th>
                    <th>RedirectID</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <% if(locals.urls){ %>
                <tbody>
                    <% urls.forEach((ele, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= ele.shortId %></td>
                        <td><%= ele.redirectUrl %></td>
                        <td><%= ele.visitHistory.length %></td>
                    </tr>
                    <% }); %>
                </tbody>
            <% } %>
        </table>
    </div>
</body>
</html>
